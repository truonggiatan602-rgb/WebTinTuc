@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="min-height: 500px;">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h3>Đăng Nhập</h3>
                </div>
                <div class="card-body p-4">

                    <!-- Hiển thị thông báo lỗi -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fa fa-exclamation-circle"></i> @ViewBag.Error
                        </div>
                    }

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label class="form-label font-weight-bold">Tên đăng nhập:</label>
                            <div class="input-group">
                                <input type="text" name="username" class="form-control" placeholder="Username" required autofocus />
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label font-weight-bold">Mật khẩu:</label>
                            <div class="input-group">
                                <input type="password" name="password" class="form-control" placeholder="Password" required />
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Đăng Nhập</button>
                        </div>
                    }
                </div>
                <div class="card-footer text-center py-3">
                    Bạn chưa có tài khoản?
                    <a href="@Url.Action("Register", "Account")" class="text-decoration-none font-weight-bold">Đăng ký ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>