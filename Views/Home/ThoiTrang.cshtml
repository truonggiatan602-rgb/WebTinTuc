@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thời Trang Hiện Nay - Báo Đời Sống</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background: #f5f5f5;
            color: #333;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        ul {
            list-style: none;
        }

        header {
            background: #fff;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #ddd;
        }

            header h1 {
                font-size: 24px;
                font-weight: bold;
                color: #007acc;
            }

        nav ul {
            display: flex;
            gap: 20px;
        }

        nav a {
            font-weight: bold;
        }

        .trending {
            background: #111;
            color: #fff;
            padding: 10px 30px;
            font-size: 14px;
            font-weight: bold;
        }

        .container {
            width: 90%;
            margin: 20px auto;
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
        }

        .main-content {
            background: #fff;
            border-radius: 5px;
            overflow: hidden;
        }

        .featured-article {
            position: relative;
            height: 300px;
            overflow: hidden;
        }

            .featured-article img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .featured-article .overlay {
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                background: rgba(0,0,0,0.7);
                color: #fff;
                padding: 20px;
            }

            .featured-article h2 {
                font-size: 24px;
                margin-bottom: 10px;
            }

            .featured-article p {
                font-size: 14px;
                opacity: 0.9;
            }

        .article-list {
            padding: 20px;
        }

        .article-item {
            display: flex;
            gap: 15px;
            padding: 15px 0;
            border-bottom: 1px solid #eee;
        }

            .article-item:last-child {
                border-bottom: none;
            }

            .article-item img {
                width: 120px;
                height: 80px;
                object-fit: cover;
                border-radius: 5px;
            }

            .article-item .content h3 {
                font-size: 16px;
                margin-bottom: 8px;
                color: #333;
            }

            .article-item .content p {
                font-size: 13px;
                color: #666;
                line-height: 1.4;
            }

        .sidebar {
            background: #fff;
            border-radius: 5px;
            padding: 20px;
            height: fit-content;
        }

            .sidebar h3 {
                margin-bottom: 15px;
                border-bottom: 2px solid #007acc;
                padding-bottom: 5px;
                color: #007acc;
            }

        .sidebar-item {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

            .sidebar-item:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

            .sidebar-item img {
                width: 60px;
                height: 45px;
                object-fit: cover;
                border-radius: 3px;
            }

            .sidebar-item .content h4 {
                font-size: 13px;
                line-height: 1.3;
                margin-bottom: 5px;
            }

            .sidebar-item .content span {
                font-size: 11px;
                color: #999;
            }

        footer {
            background: #222;
            color: #fff;
            padding: 20px;
            text-align: center;
            margin-top: 30px;
        }

        @@media (max-width: 768px) {
            .container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
